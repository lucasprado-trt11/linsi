{
    "manifest_version": 3,
    "name": "SimplificaAI - Whitelist Hack",
    "version": "6.0.0",
    "description": "Força modo de anotação no Google Docs via ID Spoofing.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/*"
            ],
            "js": [
                "injector.js"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "run_at": "document_idle",
            "world": "ISOLATED"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles.css",
                "injector.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}